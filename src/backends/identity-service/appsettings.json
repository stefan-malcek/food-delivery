{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityServerSettings": {
    "Clients": [
      {
        "ClientId": "postman",
        "AllowedGrandTypes": [ "authorization_code" ],
        "RequireClientSecret": false,
        "RedirectUris": [ "urn:ietf:wg:oauth:2.0:oob" ],
        "AllowedScopes": [ "openid" ]
      }
    ]
  }
}